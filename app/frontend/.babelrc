{
  "presets": ["es2015", "react", "stage-1"],
  "env": {
    "development": {
      "plugins": [
        "transform-decorators-legacy",
        ["react-transform", {
          "transforms": [{
            "transform": "react-transform-hmr",
            "imports": ["react"],
            "locals": ["module"]
          }, {
            "transform": "react-transform-catch-errors",
            "imports": ["react", "redbox-react"]
          }]
        }]
      ]
    },
    "production": {
      "plugins": "transform-decorators-legacy"
    }
  }
}
